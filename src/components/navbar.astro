---
import NavbarItem from './navbar-item.astro';
const path = Astro.url.pathname;
---

<header class="mt-16 z-50 top-0 border border-[#333333] rounded-[8px] fixed left-1/2 transform -translate-x-1/2 bg-black">
   <div class="flex text-sm">
      <NavbarItem href="/" title="home" active={path === '/'} />
      <NavbarItem href="/blog" title="blog" active={path === '/blog'} />
   </div>
</header>
