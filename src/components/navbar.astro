---
import NavbarItem from './navbar-item.astro';
import { matchRoute } from '../utils/utils';
const path = Astro.url.pathname;
---

<header class="mt-16 z-50 top-3 sticky flex justify-center items-center">
   <div class="border border-[#333333] rounded-[8px] bg-black backdrop-blur supports-[backdrop-filter]:bg-black/0">
      <div class="flex text-sm">
         <NavbarItem href="/" title="home" active={path === '/'} />
         <NavbarItem href="/blog" title="blog" active={matchRoute(path, '/blog')} />
      </div>
   </div>
</header>
